<Window x:Class="Splatoon2StreamingWidget.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Splatoon2StreamingWidget"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalAlignment="Stretch" Margin="10,10,10,40">
            <TextBlock x:Name="UpdateTextBlock" Background="#FFF9F9F9" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="UpdateButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,150,10" Height="20" Width="80" Content="Update" FontSize="8" Click="UpdateButton_Click" />
        <Button x:Name="CancelButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="150,0,0,10" Height="20" Width="80" Content="Cancel" FontSize="8" Click="CancelButton_Click" Cursor="Hand" />
    </Grid>
</Window>
